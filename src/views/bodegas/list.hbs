<div class="container p-4">
    <div class="row">

        {{#each bodegas}}
            <div class="col-md-3  mt-4">
                <div class="card text-center">
                    <div class="card-body border-light">
                        <h3 class="card-title text-uppercase" >
                            {{name}}
                        </h3>
                        <hr>
                        <p class="card-subtitle mb-2 text-muted"><strong>Head quarter:</strong> {{headquarters_number}}</p>
                        <p class="card-text m-1"><strong>Telefono:</strong> {{phone}}</p>
                        <p class="card-text m-1"><strong>Ciudad:</strong> {{city}}</p>
                        <p class="card-text m-1"><strong>Dirección:</strong> {{address}}</p>
                        <p>{{timeago created_at }}</p>
                        <a href="/bodegas/delete/{{id}}" class="btn btn-danger">Delete</a>
                        <a href="/bodegas/edit/{{id}}" class="btn btn-secondary">Edit</a>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay bodegas creadas aún.</p>
                    <a href="/bodegas/add" class="btn btn-success">Crea una</a>
                </div>
            </div>

        {{/each}}
    </div>
</div>